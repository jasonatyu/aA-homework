<h1><%= @album.title %></h1>
<h2>Track List</h2>
<% @album.tracks.each do |track| %>
<ul>
<li><a href="<%= track_url(track) %>"><%= track.title %></a></li>
</ul>
<% end %>

<a href="<%= new_album_track_url(@album.id) %>">New Track</a>
<br>
<br>
 <form action="<%= album_url(@album) %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete Album"> 
</form>
<br>
<a href="<%= band_url(@album.band_id) %>">Back to Band</a> 