<h1><%= @band.name %><h1>
<div id="band">
    <ul>
    <% @albums.each do |album| %>
        <li><a href="<%= album_url(album) %>"><%= album.title %>(<%= album.year %>)</a></li>
    <% end %>
    </ul>
    <form action="<%= new_band_album_url(@band) %>" method="GET">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="submit" value="Create New Album">
    </form>
    <form action="<%= band_url(@band) %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="submit" value="Delete <%= @band.name %>">
    </form>
</div>